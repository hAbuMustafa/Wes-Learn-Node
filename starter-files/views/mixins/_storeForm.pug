mixin storeForm(store={})
  form(action=`/add/${store._id ||''}` method="POST" class="card")
    label(for="name") Name
    input(type="text" name="name" placeholder="Store Name" value=store.name)
    label(for="description") Description
    textarea(name="description" placeholder="Description")=store.description
    - const choices = ['WiFi', 'Open Late', 'Family Friendly','Vegatarian','Licenced']
    - const {tags} = store || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type='checkbox' id=choice value=choice name='tags' checked=(tags.includes(choice)))
          label(for=choice)=choice
    input(type='submit' value="Save ðŸ’¾" class="button")